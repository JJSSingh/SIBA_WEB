@model SIBA_WEB.Models.Alumno

@{
    ViewData["Title"] = "Home Page";
}

<div style="background-color: #eeeeee;width: 100%;color: white;margin-left: 1%;" class="clearfix">


    <div style="background-color: #222222;width: 20%;text-align: center;float: left;height: 100%;">
        <p style="color: #d6d6d6; font-size:18px;">
            Estatus De Solicitud
        </p>
        @if (User.Identity.IsAuthenticated)
        {
            @if (!User.IsInRole("Admin"))
            {
                @if (Model.Status == null)
                {
                    <a style="font-size: 24px;color: #d6d6d6;" asp-area="" asp-controller="Alumno" asp-action="Completar">¡Completar El Registro!</a>
                }

                @if (Model.Status == "Pendiente")
                {
                    <a style="font-size: 24px;color: #d6d6d6;" asp-area="" asp-controller="Alumno" asp-action="UploadFiles">¡Subir Sus Archivos!</a>
                }
                @if (Model.Status == "Revision")
                {
                    <a style="font-size: 24px;color: #d6d6d6;" asp-area="" asp-controller="Alumno" asp-action="Profile">¡Consulte Su Perfil!</a>
                }
                @if (Model.Status == "Entrevista")
                {
                    <a style="font-size: 24px;color: #d6d6d6;" asp-area="" asp-controller="Alumno" asp-action="Profile">¡Ya Revisaron Su Documentacion!</a>
                }
                @if (Model.Status == "Activo")
                {
                    <a style="font-size: 24px;color: #d6d6d6;" asp-area="" asp-controller="Alumno" asp-action="TokenDetails">TokenDiario</a>
                }
            }

        }

    </div>

    <div style="text-align: center;">
        <h1 style="text-align: center;width: 90%;text-shadow: 2px 0px 2px rgb(0, 0, 0);">
            INSTITUTO TECNOLOGICO DE CULIACÁN
        </h1>
    </div>

</div>

<div class="container sub-container">



    <div class="row" align:center">
        <img src="~/images/cesa.png" class="col-md-6 img-fluid" alt="Responsive image" style="margin-left:25%">
    </div>

    <div class="row" style="text-align:center; background-color:#222222; color: #9d9d9d;">
        <h3>Información</h3>
    </div>
    <section class="row clearfix" style="background-color:#eeeeee">
        <div class="item itm">
            <h4>Requisitos</h4>
            <p>
                - Ser estudiante del Instituto Tecnológico de Culiacán.<br>
                - Cumplir con el objetivo de la presente convocatoria.<br>
            </p>
        </div>
        <div class="item itm">
            <h4>Documentos</h4>
            <p>
                - Identificación oficial con fotografia.<br>
                - Solicitud de beca alimenticia.<br>
                - Comprobante de domicilio.<br>
                - Comprobante de ingresos.<br>
                - Carga de materias.<br>
                - Kardéx.<br>
            </p>
        </div>
        <div class="item itm">

            <h4>Recepsión De Documentos</h4>
            <p>- Del 4 de Febrero al 15 de Marzo del 2019.</p>
            <h4>Entrevistas</h4>
            <p> - Del 18 al 22 de Febrero del 2019.</p>
            <h4>Publicación De Resultados</h4>
            <p> - Lunes 25 de Febrero del 2019.</p>


        </div>
    </section>

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/comida4.jpg" class="img-responsive" />

            </div>
            <div class="item">
                <img src="~/images/comida9.jpg" class="img-responsive" />

            </div>
            <div class="item">
                <img src="~/images/comida10.jpg" class="img-responsive" />

            </div>
            <div class="item">
                <img src="~/images/comida8.jpg" class="img-responsive" />

            </div>
            <div class="item">
                <img src="~/images/comida7.jpg" class="img-responsive" />

            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="padding-top: 25%;">
            <span aria-hidden="true"><</span>
            <span>Anterior</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="padding-top: 25%;">
            <span>Siguiente</span>
            <span>></span>

        </a>
    </div>



