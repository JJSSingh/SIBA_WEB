@model SIBA_WEB.Models.Alumno

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <p> Flujo a continuar.</p>
    @if (User.Identity.IsAuthenticated)
    {
        @if (!User.IsInRole("Admin"))
        {
            @if (Model.Status == null)
            {
                <a asp-area="" asp-controller="Alumno" asp-action="Completar">Completar el registro!</a>
            }

            @if (Model.Status == "Pendiente")
            {
                <a asp-area="" asp-controller="Alumno" asp-action="UploadFiles">Subir sus archivos!</a>
            }
            @if (Model.Status == "Revision")
            {
                <a asp-area="" asp-controller="Alumno" asp-action="Profile">Consulte su perfil!</a>
            }
            @if (Model.Status == "Entrevista")
            {
                <a asp-area="" asp-controller="Alumno" asp-action="Profile"> Ya revisaron su documentacion!</a>
            }
            @if (Model.Status == "Activo")
            {
                <a asp-area="" asp-controller="Alumno" asp-action="TokenDetails"> TokenDiario </a>
            }
        }

    }




</div>


